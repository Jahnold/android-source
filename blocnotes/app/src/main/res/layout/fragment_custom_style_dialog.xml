<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bloc.blocnotes.ui.CustomStyleDialogFragment">

    <Spinner
        android:id="@+id/system_font_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></Spinner>

    <Button
        android:id="@+id/btn_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small"
        android:layout_below="@+id/system_font_spinner"
        android:layout_toStartOf="@+id/btn_medium"
        android:layout_marginRight="30dp"
        android:background="@drawable/style_button"/>


    <Button
        android:id="@+id/btn_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:layout_below="@+id/system_font_spinner"
        android:layout_centerHorizontal="true"
        android:background="@drawable/style_button" />


    <Button
        android:id="@+id/btn_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large"
        android:layout_below="@+id/system_font_spinner"
        android:layout_toRightOf="@+id/btn_medium"
        android:layout_marginLeft="30dp"
        android:background="@drawable/style_button" />

</RelativeLayout>
