<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bloc.blocnotes.ui.CustomStyleDialogFragment">

    <Spinner
        android:id="@+id/system_font_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></Spinner>

    <RadioGroup
        android:id="@+id/rg_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/system_font_spinner"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >


        <RadioButton
            android:id="@+id/rb_style_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_style_small" />

        <RadioButton
            android:id="@+id/rb_style_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_style_medium" />

        <RadioButton
            android:id="@+id/rb_style_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_style_large" />


    </RadioGroup>

</RelativeLayout>
